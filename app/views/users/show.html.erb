<h1><%= @name %> profile</h1>
<%= render @user %>

<%= render 'friendships/friends_section', name: @name,
                                          user: @user,
                                          friends: @friends,
                                          friends_in_common: @friends_in_common,
                                          other_friends: @other_friends %>

<% if current_user == @user %>
  <h2>New post</h2>
  <%= render 'posts/post_form', post: @post %>
<% end %>

<h2><%= @name %> recent posts</h2>
<% if current_user == @user || current_user.friendship_confirmed?(@user) %>
  <%= render @posts %>
<% else %>
  <div>Add <%= @user.email %> as a friend to see his/her posts.</div>
<% end %>