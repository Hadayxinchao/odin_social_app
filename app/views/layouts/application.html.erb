<!DOCTYPE html>
<html>
  <head>
    <title>Odinsocial</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <ul>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Profile', current_user %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Friends', friendships_path %></li>
        <li><%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: 'delete' } %></li>
      </ul> 
      <div class='notification'>
        <% current_user.notifications.order(created_at: :desc).first(5).each do |n| %>
          <div><%= link_to n.content, n.path %> - <%= link_to 'x', n, data: { turbo_method: :delete } %></div>
        <% end %>
      </div>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>
  </body>
</html>
