<%= stylesheet_link_tag 'password', 'data-turbo-track': 'reload' %>
<div class='password-window'>
  <div class='password-modal'>
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'stretch' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'stretch' %>
      </div>
    <% end %>
  </div>
</div>